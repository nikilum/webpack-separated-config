block variables

doctype html
html(lang="ru")
	head
		meta(charset="utf-8")
		title #{title}
		meta(http-equiv="X-UA-Compatible" content="IE=edge")
		meta(name="viewport" content="width=device-width, initial-scale=1")
		link(rel="icon" href="favicon.ico" type="image/x-icon")
		link(rel='stylesheet', href=`./css/${cssFilename}.bundle.css`)
	body#root
		block content

	script(defer src=`./js/${jsFilename}.bundle.js`)
